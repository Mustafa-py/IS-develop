<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://nodeListView.title"
      focusComponent="nodesDataGrid">
    <data>
        <collection id="nodesDc"
                    class="com.company.isobserve.entity.Node">
            <fetchPlan extends="_base">
                <property name="zabbixServer" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="nodesDl" readOnly="true">
                <query>
                    <![CDATA[select e from Node e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="nodesDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="nodesDataGrid.create"/>
            <button id="editButton" action="nodesDataGrid.edit"/>
            <button id="removeButton" action="nodesDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="nodesDl"/>
        </hbox>
        <dataGrid id="nodesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="nodesDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="zabbixId"/>
                <column property="name"/>
                <column property="ipAddress"/>
                <column property="locationLat"/>
                <column property="locationLon"/>
                <column property="status"/>
                <column property="problemLevel"/>
                <column property="zabbixServer"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
